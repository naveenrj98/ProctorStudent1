<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/myRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="550dp"
    android:background="@color/browser_actions_bg_grey"
    >

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/publish"
        android:layout_marginTop="49dp"
        android:background="@color/cardview_dark_background" />

    <EditText
        android:id="@+id/publishText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView12"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/publish"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/publishText"
        android:layout_centerHorizontal="true"
        android:background="@drawable/color"
        android:text="PUBLISH"
        android:textColor="@color/browser_actions_bg_grey"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/pname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/publish"
        android:layout_marginBottom="11dp"
        android:layout_toStartOf="@+id/publishText"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/publishText"
        android:layout_below="@+id/textView10"
        android:text="YOUR ANNOUNCEMENTS"
        android:textColor="@color/browser_actions_text_color"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>
