<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/greybg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <Button
        android:id="@+id/schedulesem2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="65dp"
        android:background="@drawable/schedulemeetings" />

    <FrameLayout
        android:id="@+id/showSchedule2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignTop="@+id/schedulesem2"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="18dp"
        android:layout_toEndOf="@+id/schedulesem2"
        android:background="@drawable/scheduled"
        android:text="SEND SCHEDULE">

        <TextView
            android:id="@+id/time2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:paddingLeft="50dp"
            android:paddingTop="60dp"
            android:text="TIME"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/month2"
            android:layout_width="150dp"
            android:layout_height="30dp"

            android:paddingLeft="40dp"
            android:paddingTop="10dp"
            android:text="MONTH"
            android:textColor="@color/browser_actions_bg_grey"
            android:textSize="@dimen/activity_horizontal_margin"
            android:textStyle="bold" />

    </FrameLayout>


    <Button
        android:id="@+id/ca2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignStart="@+id/showSchedule2"

        android:layout_below="@+id/showSchedule2"
        android:layout_marginTop="25dp"
        android:background="@drawable/commonannouncements" />

    <Button
        android:id="@+id/chatwithstudent2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignStart="@+id/schedulesem2"
        android:layout_alignTop="@+id/ca2"
        android:background="@drawable/chatwstudent" />

    <TextView
        android:id="@+id/showParent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="TextView"
        android:visibility="invisible" />

    <Button
        android:id="@+id/signout2"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/color"
        android:text="SIGN OUT"
        android:textColor="@color/browser_actions_bg_grey"
        android:textStyle="bold" />


</RelativeLayout>